<div class="column is-half is-offset-one-quarter" id="main-card">
    <div class="card">
        <div class="card-content is-vcentered">
            <div class="card-header-title is-size-2" id="recipe_name" >
                {{recipe.recipe_name}}
            </div>
            <div class="card-content"><div >
                <img id="recipe_img" src="{{recipe.image.url}}" ></div>
                <p class="card-content"><strong>Cook time:</strong><span id="recipe_time"> {{recipe.time}}</span></p>
                <a href="#" id="favorite" class="button is-info card-content">Favorite</a>
                <div class="card-content">
                    <h4 class="is-size-4"><strong>Ingredients</strong></h4>
                    <ul class="ingredients">
                        {{#each recipe.ingredient.ingredient}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
                <div class="card-content">
                    <h4 class="is-size-4"><strong>Instructions</strong></h4>
                    <div>
                        {{#each recipe.instruction.instruction}}

                            <br>{{this}}<br>

                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/favorite.js"></script>
